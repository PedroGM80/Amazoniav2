<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:textAlignment="center"
    tools:context=".EightFragment">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:maxWidth="200dp"
        android:minHeight="48dp"
        android:text="@string/nombre"
        android:textAlignment="center"
        android:visibility="visible"
        tools:ignore="LabelFor" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="48dp"
        android:text="@string/palomitas"
        android:textAlignment="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/de_tipo"
        android:textAlignment="center"
        android:visibility="visible" />

    <RadioGroup
        android:id="@+id/radioGroupPalomitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:visibility="invisible"
        tools:ignore="UselessParent">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/caramelo"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/sal"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/mantequilla"
            android:textAlignment="center" />
    </RadioGroup>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="48dp"
        android:text="@string/refresco"
        android:textAlignment="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/de_tipo"
        android:textAlignment="center"
        android:visibility="visible" />


    <RadioGroup
        android:id="@+id/RadioGroupRefresco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:visibility="invisible">

        <RadioButton
            android:id="@+id/radioButton1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/light"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButton2b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/zero"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButton3b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/normal"
            android:textAlignment="center" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/de_sabor"
        android:textAlignment="center"
        android:visibility="visible" />

    <RadioGroup
        android:id="@+id/RadioGroupRefrescoSabores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:visibility="invisible">

        <RadioButton
            android:id="@+id/radioButton1c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/cola"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButton2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/limon"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButton3c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:text="@string/naranja"
            android:textAlignment="center" />
    </RadioGroup>

    <Button
        android:id="@+id/button17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complementos"
        android:visibility="visible" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:text="@string/elegir_asiento"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seguir"
        android:visibility="visible" />
</LinearLayout>